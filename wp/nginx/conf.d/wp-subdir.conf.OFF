server {
    server_name _;

    root /var/www/html;
    include global/*.conf;

    if (!-e $request_filename) {
        rewrite /wp-admin$ $scheme://$host$uri/ permanent;
        rewrite ^(/[^/]+)?(/wp-.*) $2 last;
        rewrite ^(/[^/]+)?(/.*\.php) $2 last;
    }

    location / {
        try_files $uri $uri/ /index.php?$args;
        include global/*.rules;
    }

    location ~ \.php$ {
        try_files $uri =404;
        include fastcgi_params;
        limit_req zone=one burst=1 nodelay;
        fastcgi_pass php;
    }
}
